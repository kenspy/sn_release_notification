function getReferenceInfo(table, property) {
	var value="";
	var displayValue ="";
	var gr = new GlideRecord(table);
	if (gr.get(gs.getProperty(property))) {
		value = gr.getUniqueValue();
		displayValue = gr.name;
	}
	
	var refData = [value, displayValue];
	return refData;
}]]></client_script>
